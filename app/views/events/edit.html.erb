<div class="container mt-3">
<div class="low">
<%= form_with model: @event, local: true do |f| %>
  <div class="mb-3">
    <label class="form-label">Titlte</label>
  <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <label class="form-label">Datetime</label>
    <%= f.datetime_local_field :start_at, class: 'form-control'%>
  </div>
  <div class="mb-3">
    <label class="form-label">Image</label>
   <%= f.file_field :image, id:"item-image" %>
  </div>
      <%= image_tag @event.image.variant(resize: '500x500'), class: 'message-image' if @event.image.attached? %>
  <div class="buttons d-flex mt-3">
  <button type="submit" class="btn btn-primary mr-3">Submit</button>
<%= button_to "delete", @event, method: :delete, class: "btn btn-danger mr-3", data: {confirm: "削除します。よろしいですか？"} %>
<%= link_to 'テンプレートから選択', event_edit_template_path(@event) ,class: "btn btn-secondary mr-3 pt-3 pb-3"%>

  </div>

<% end %>
</div>
</div>
