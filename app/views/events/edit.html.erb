<%= form_with model: @event, local: true do |f| %>
  <div class="mb-3">
    <label class="form-label">Titlte</label>
  <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <label class="form-label">Datetime</label>
    <%= f.datetime_local_field :start_at, class: 'form-control'%>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
<%= button_to "delete", @event, method: :delete, class: "btn btn-danger", data: {confirm: "削除します。よろしいですか？"} %>
<% end %>
